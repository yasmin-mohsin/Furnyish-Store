                            </ul>
                            <div class="single-bottom">
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Green"><p>Green</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Yollow"><p>Yollow</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Red"><p>Red</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Blue"><p>Blue</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Black"><p>Black</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Gray"><p>Gray</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Orange"><p> Orange</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="Selver"><p>Selver</p></a>
                                <a asp-controller="Product" asp-action="SearchByColorAdmin" asp-route-ProdColor="White"><p>White</p></a>

                            </div>
                        </div>
                    </div>
                </section>


            </div>

        </div>

    </div>
</div>
}
else
            {
                <div class="container">

                    <p style="color:#026466;" class="text-center mt-5" > THere No Products Fot This Filter</p>
                    <a asp-controller="Product" asp-action="GetAll" class="btn btn-info">Back To List</a>
                </div>
            }
