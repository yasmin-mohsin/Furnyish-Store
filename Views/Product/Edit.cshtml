@model WebApplication2.Models.Product

@{
    ViewData["Title"] = "Edit";
    var allcat = (SelectList)ViewBag.dataSelect;
}

<h1 class="text-center" style=" margin: 20px; color: #5da0a0;">Edit Product</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"  asp-route-imgpath="@Model.Img_path" enctype="multipart/form-data" style="margin-left:160px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input style="font-style:normal;font-size:15px;" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input style="font-style:normal;font-size:15px;" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input style="font-style:normal;font-size:15px;" asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input style="font-style:normal;font-size:15px;" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input style="font-style:normal;font-size:15px;" asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabric" class="control-label"></label>
                <textarea style="font-style:normal;font-size:15px;" asp-for="Fabric" class="form-control"></textarea>
                <span asp-validation-for="Fabric" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <textarea style="font-style:normal;font-size:15px;" asp-for="Discription" class="form-control"></textarea>
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input style="font-style:normal;font-size:15px;" asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Img_path" class="control-label"></label>
                <input asp-for="Img_path" hidden="hidden" class="form-control" />
                <span asp-validation-for="Img_path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Img_path" class="control-label"></label>
                <input name="img" type="file" class="form-control" />
                <span asp-validation-for="Img_path" class="text-danger"></span>
            </div>*@
        <div class="form-group">
            <label class="control-label">Category Name</label>
            <select asp-for="Cat_ID" , class="form-control" asp-items="allcat"></select>
            <span asp-validation-for="Cat_ID" class="text-danger"></span>
        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAll" class="btn btn-danger" style="margin-left:160px">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
